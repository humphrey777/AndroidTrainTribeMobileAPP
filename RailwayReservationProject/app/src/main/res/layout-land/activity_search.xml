<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_width="332dp"
        android:layout_height="332dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_leaving_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Leaving from:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/edit_text_leaving_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_leaving_from"
            android:layout_marginBottom="2dp"
            android:hint="Enter the name of the city or station"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:minHeight="48dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/text_view_departure_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_text_leaving_from"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="Departure Date:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/edit_text_departure_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_departure_date"
            android:layout_marginBottom="2dp"
            android:hint="Select the date"
            android:imeOptions="actionNext"
            android:inputType="date"
            android:minHeight="48dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/text_view_going_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_text_departure_date"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="Going to:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/edit_text_going_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_going_to"
            android:layout_marginBottom="2dp"
            android:hint="Enter the name of the city or station"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:minHeight="48dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/text_view_num_passengers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_text_going_to"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="Number of Passengers:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/edit_text_num_passengers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_num_passengers"
            android:layout_marginBottom="2dp"
            android:hint="Enter the number of passengers"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:minHeight="48dp"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="302dp"
        android:layout_height="332dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_text_num_passengers"
            android:layout_marginTop="150dp"
            android:minHeight="48dp"
            android:text="Search"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_backToAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_search"
            android:layout_marginTop="10dp"
            android:minHeight="48dp"
            android:text="Return"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>